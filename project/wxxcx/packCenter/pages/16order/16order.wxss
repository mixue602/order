/* pages/profile/profile.wxss */

.order_tab {
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    z-index: 1;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background: #fff;
}

.order_tab view {
    border-bottom: #fff solid 4rpx;
    color: #5a6066;
    font: 30rpx/80rpx 'Microsoft Yahei';
    padding: 0 20rpx;
    text-align: center;
    justify-content: center;
}

.order_tab .cur {
    border-bottom: #f20c59 solid 4rpx;
    color: #f20c59;
}

.order_scroll_group {
    position: relative;
    box-sizing: border-box;
}

.order_tips {
    background: #fff7d2;
    color: #ff8000;
    padding: 7rpx 60rpx;
    position: fixed;
    top: 83rpx;
    left: 0;
    z-index: 1;
    font: 22rpx/28rpx 'Microsoft Yahei';
}

.order_tips .tip {
    position: absolute;
    top: 22rpx;
    left: 20rpx;
    width: 28rpx;
    height: 24rpx;
}

.order_tips .close_view {
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 69rpx;
    background: #ffde9c;
    text-align: center;
}

.order_tips .close {
    margin-top: 27rpx;
    width: 18rpx;
    height: 18rpx;
}

.bordertop {
    border-top: #e6e6e6 solid 1rpx;
    width: 100%;
}

.order_list_group {
    padding-top: 128rpx;
}

.order_list_group_hide {
    padding-top: 80rpx;
}

.order_list {
    overflow: hidden;
    margin-top: 20rpx;
}

.goods_list_box {
    background: #fff;
}

.store_box {
    width: 100%;
    height: 80rpx;
    background: #fff;
}

.store_title {
    display: flex;
    float: left;
}

.store_icon {
    width: 28rpx;
    height: 28rpx;
    display: inline-block;
    margin: 26rpx 10rpx 26rpx 20rpx;
}

.store_title text {
    margin-top: 20rpx;
    font: 28rpx/40rpx 'Microsoft Yahei';
    color: #262c32;
}

.status_box {
    margin-right: 20rpx;
    float: right;
}

.status_box text {
    font: 26rpx/36rpx 'Microsoft Yahei';
    color: #f20c59;
    float: left;
    margin: 22rpx 0;
}

.status_box .delete {
    width: 32rpx;
    height: 32rpx;
    margin: 26rpx 17rpx 0 50rpx;
    float: left;
}

.goods_list {
    background: #f3f5f7;
    padding: 12rpx 0;
    overflow: hidden;
    width: 750rpx;
    margin-bottom: 10rpx;
    display: flex;
    float: left;
}

.goods_list image {
    width: 152rpx;
    height: 152rpx;
    margin: 0 19rpx 0 20rpx;
}

.goods_list .goods_box {
    display: -webkit-flex;
    /* Safari */
    flex: 1;
    display: flex;
    justify-content: space-between;
}

.goods_name_box {
    width: 414rpx;
    max-height: 90rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods_name_box .goods_name {
    font: 26rpx/32rpx 'Microsoft Yahei';
    color: #333;
}

.goods_list .price_num_box {
    margin-right: 20rpx;
}

.goods_price {
    display: block;
    font: 24rpx/36rpx 'Arial';
    color: #333;
    text-align: right;
    padding-top: 8rpx;
}

.goods_list .goods_num {
    color: #999;
    font: 24rpx/32rpx 'Arial';
    padding-top: 10rpx;
    display: block;
    text-align: right;
    opacity: 0.99;
}

.order_status {
    font: 24rpx/40rpx 'Microsoft Yahei';
    background: #fff;
    color: #999;
    text-align: right;
    padding-right: 23rpx;
    padding-bottom: 27rpx;
    margin-bottom: 20rpx;
}

.black {
    color: #151515;
    font: 24rpx/40rpx 'Arial';
}

.font32 {
    font: 32rpx/40rpx 'Microsoft Yahei';
}

.total_box {
    margin-top: 15rpx;
}

.text_tips {
    font: 24rpx/32rpx 'Microsoft Yahei';
    color: #f80;
    padding-top: 10rpx;
}

.grey_button {
    padding: 0 20rpx;
    height: 54rpx;
    border: 1px solid #5a6066;
    color: #262c32;
    font: 26rpx/54rpx 'Microsoft Yahei';
    text-align: center;
    margin-left: 15rpx;
    margin-top: 30rpx;
    border-radius: 40rpx;
    display: inline-block;
    cursor: pointer;
}

.red_button {
    border: 1px solid #f20c59;
    color: #f20c59;
}

.tiger_icon {
    width: 244rpx;
    height: 244rpx;
    margin: 310rpx 0 0 252rpx;
}

.errTips {
    color: #5a6066;
    font: 32rpx/32rpx 'Microsoft Yahei';
    padding-top: 18rpx;
    width: 100%;
    text-align: center;
}

.nomore,
.ismore {
    color: #5a6066;
    font: 26rpx/30rpx 'Microsoft Yahei';
    padding: 30rpx 0;
    width: 100%;
    text-align: center;
}

.gift {
    color: #f20c59;
    width: 46rpx;
    margin-right: 10rpx;
    text-align: center;
    border: #f20c59 solid 1rpx;
    border-radius: 5rpx;
    font: 20rpx/24rpx 'Microsoft Yahei';
    display: inline-block;
}

.button_box {
    display: flex;
    justify-content: flex-end;
}

.bill_button {
    width: 170rpx;
    height: 60rpx;
    font-size: 26rpx;
    color: #151515;
    margin-top: 20rpx;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #D7D8D9;
    border-radius: 100rpx;
}


/* 多发票弹出层 */

.pop_list {
    width: 750rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}

.pop_list_bg {
    width: 750rpx;
    background: rgba(0, 0, 0, 0.6);
    position: fixed;
    top: 0;
    left: 0;
    box-sizing: border-box;
}

.pop_box {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 800rpx;
    z-index: 99;
    background: #fff;
}

.box_title {
    height: 86rpx;
    line-height: 86rpx;
    width: 100%;
    text-align: center;
    border-bottom: 1rpx solid #D7D8D9;
}

.del {
    position: absolute;
    right: 25rpx;
    top: 25rpx;
    width: 34rpx;
    height: 34rpx;
    font-size: 0;
}

.cancel {
    width: 100%;
    height: 100%;
}

.pop_title {
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
}

.bill_box {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 40rpx;
    display: flex;
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #5A6066;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.bill_check {
    width: 136rpx;
    height: 48rpx;
    border: 1rpx solid #D7D8D9;
    border-radius: 100rpx;
    line-height: 50rpx;
    text-align: center;
    margin-right: 30rpx;
}

.preventTouchMove {
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 0;
}

.first_bill {
    width: 100%;
    height: 40rpx;
}