page{
    position: relative;
    height: 100%;
}

.container{
    position: relative;
    background:#fff;
}

/*tit*/
.appraise-type{
    position: relative;
    width: 750rpx;
    overflow: hidden;
}
/*标签*/
.type-box{
    width: 600rpx;
    float:left;
}

.type{
    display: inline-block;
    margin: 20rpx 0 0 20rpx;
    padding: 0 15rpx;
    background: #ffebeb;
    font: 400 24rpx/50rpx 'Microsoft YaHei';
    color: #666;
    border-radius: 5rpx;
}
.type-all{
    padding: 0 25rpx;
}
.on,.typeHover{
    background: #ef3030;
    color: #fff;
}
/*好评度*/
.good-box{
    width: 150rpx;
    float:left;
    text-align: center;
    height: 90rpx;
    padding-top: 25rpx;
}
 .good-text{
     display: inline-block;
     width: 150rpx;
     height: 40rpx;
     font: 400 24rpx/40rpx 'Microsoft YaHei';
     color: #666;
 }
 .good-percentage{
    width: 150rpx;
    height: 50rpx;
    font: 600 34rpx/50rpx 'Microsoft YaHei';
    color: #ef3030;
 }
  .good-percentage text{
    display: inline-block;
  }
  .good-percentage .good-icon{
      padding-top: 14rpx;
      font: 400 20rpx/20rpx 'Microsoft YaHei';
  }

.appraise-info{
    position: relative;
    width: 710rpx;
    padding: 20rpx;
    border-bottom: 1rpx solid #efefef;
    font: 400 24rpx/25rpx "Microsoft YaHei";
}
.user-info{
    font-size: 24rpx;
    height: 32rpx;
    padding: 10rpx 0;
    overflow: hidden;
}
.user-name{
    float: left;
    color: #333;
    height: 32rpx;
    line-height: 32rpx;
    padding-right: 10rpx;
}
.user-grade{
    float: left;
    padding:2rpx;
    border: 1rpx solid #ef3030;
    color: #ef3030;
    font-weight: 500;
    border-radius: 5rpx;
}

/*五星*/
.user-start{
    position: relative;
    float: left;
    margin: 4rpx 0 0 20rpx;
    width: 60px;
    height: 12px;
    background: url("http://css.gomein.net.cn/gmpro/1.0.0/minapp/img/startbg.png") repeat-x;
}
.user-start-yellow{
    position: absolute;
    left: 0;
    top: 0;
    height: 12px;
    background: url("http://css.gomein.net.cn/gmpro/1.0.0/minapp/img/start.png") repeat-x ;
}
.appraise-info .appraise-text{
    font-size: 26rpx;
    line-height:30rpx;
    padding:15rpx 0;
    color: #333;
}

.appraise-parameter{
    color: #a2a4a6;
    line-height: 35rpx;
}
.appraise-parameter >view{
    font-size: 24rpx;
}
.tips{
    padding: 20rpx;
    text-align: center;
    font: 400 30rpx "sans-serif";
}
.tips text{
      padding-left: 20rpx;
}

/*返回顶部按钮*/
.top-btn{
    position: absolute;
    bottom: 40rpx;
    right: 20rpx;
    width: 60rpx;
    height: 60rpx;
    padding: 10rpx;
    border: 1rpx solid #a2a4a6;
    background: rgba(0,0,0,.2);
    border-radius: 40rpx;
    color:  rgba(255,255,255,.8);
    font: 400 24rpx/30rpx "sans-serif";
    text-align: center;
}
