/* pages/groupList/groupList.wxss */

.containers {

  position: relative;
}

.nav {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  width: 750rpx;
  align-items: center;
   background-color: #2e3032;
   z-index: 11;
}

.nav-item {
  width: 150rpx;
  padding: 10rpx 0;
  text-align: center;
  background: #2e3032;
  color: #fff;
}

.nav-time {
  font-size: 30rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.nav-tit {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 4rpx;
}

.select {
  background-image: linear-gradient(-30deg, #ff0027 0%, #f0f 100%);
}

/* 内容 */

.cont {
  padding-top: 88rpx;
  box-sizing: border-box;
  width: 750rpx;
  position: relative;
  overflow-y: auto;
}

.cont-tit {
  width: 710rpx;
  padding: 0 20rpx;
  height: 60rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tit-left {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #262c32;
}

.tit-right {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #262c32;
  text-align: center;
}

.time-box {
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  text-align: center;
}

.time {
  width: 30rpx;
  height: 28rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  background: #536079;
  border-radius: 4rpx;
  color: #fff;
}

.time-span {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #33383e;
  padding: 0 8rpx;
}

/* 商品 */

.item {
  width: 710rpx;
  padding: 20rpx;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
  background: #fff;
}

.item-img {
  width: 200rpx;
  height: 200rpx;
}

.item-cont {
  padding-left: 40rpx;
  width: 470rpx;
}

.desc {
  font-size: 26rpx;
  color: #00050a;
  text-align: justify;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price {
  display: flex;
  margin-top: 20rpx;
  align-items: flex-end;
}

.normal-price {
  font-size: 32rpx;
  color: #f20c59;
  text-align: justify;
}

.del-price {
  font-size: 24rpx;
  color: #919599;
  text-decoration: line-through;
  padding-left: 15rpx;
}

.item-btn-box {
  display: flex;
  justify-content: space-between;
}

.percentage-box {
  width: 200rpx;
}

.percentage-text {
  font-size: 22rpx;
  color: #919599;
  line-height: 30rpx;
}

.percentage-span {
  width: 200rpx;
  height: 8rpx;
  border-radius: 6rpx;
  border: 2rpx solid #f20c59;
  background: #fff;
  position: relative;
}

.percentage {
  width: 100rpx;
  height: 8rpx;
  background: #f20c59;
}

.item-btn {
  width: 128rpx;
  height: 42rpx;
  background-image: linear-gradient(-90deg, #fa1e8c 0%, #fc1e56 100%);
  border-radius: 21rpx;
  font-size: 22rpx;
  line-height: 42rpx;
  color: #fff;
  text-align: center;
  font-family: PingFangSC-Regular;
}

.item-init-btn {
  width: 128rpx;
  height: 42rpx;
  background-image: linear-gradient(-90deg, #ff94cb 0%, #ff80aa 100%);
  border-radius: 21rpx;
  font-size: 22rpx;
  line-height: 42rpx;
  color: rgba(255, 255, 255, 0.30);
  text-align: center;
  font-family: PingFangSC-Regular;
}

.no-text {
  width: 750rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 26rpx;
  color: #5a6066;
}
