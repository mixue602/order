.picker-base{
  border: solid 1rpx $gray;
  padding: 0 26rpx 0 10rpx;
}
.picker-count{
  display: block;
  min-width:98rpx;
  height:44rpx;
  border-radius: 5rpx;
  .select{
    display: inline-block;
    min-width: 98rpx;
    height: 44rpx;
    overflow: hidden;
    background: #fff;
    border: 1px solid #dddddd;
    border-radius: 8rpx;
    color: #000;
    font: 20rpx/44rpx Arial;
    padding-right: 38rpx;
    padding-left:10rpx;
    position: relative;
    box-sizing: border-box;

    em{
      display: block;
      text-align: center;
      font: 28rpx/44rpx Arial;
      color:#000;
      &.disabled {
        color: #919599 !important;
      }
    }
    image{
      width: 18rpx;
      height:10rpx;

      position: absolute;
      top: 50%;
      right: 10rpx;
      margin-top: -5rpx;
    }

  }
}
