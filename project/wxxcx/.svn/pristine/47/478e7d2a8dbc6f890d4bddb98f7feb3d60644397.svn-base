.check-box{
  border: solid 1rpx $gray;
  display: inline-block;
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
}
.check-box--default,
.check-box--checked,
.check-box--uncheck {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}
.check-box--gray{
  span{
    background: #cccccc;
  }
}
.check-box-suit{
  .product-check{
    width: 22rpx;
    height: 22rpx;
    background: #fff;
    border-radius: 50%;
  }
  .check-box--default{
    width: 22rpx;
    height: 22rpx;
  }
}
.product-suit-checked-sm {
  display: block;
  width: 20rpx;
  height: 20rpx;
  margin-left:12rpx;
  background-color: #ff5a5a;
  border-radius: 50%;
}
.product-suit-uncheck-sm {
  display: block;
  width: 18rpx !important;
  height: 18rpx !important;
  margin-left:12rpx;
  background: #ebeced;
  border: 2rpx solid #d7d8d9;
  border-radius: 50%;
}
