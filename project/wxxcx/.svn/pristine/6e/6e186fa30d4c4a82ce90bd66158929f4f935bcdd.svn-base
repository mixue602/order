/* pages/orderdetails/orderdetails.wxss */

page {
  width: 100%;
  background-color: #ee0754;
}
/* bg */
.join_bgbox{
  text-align:center;
  height:316rpx;
  overflow: hidden;
}
.join_bg{
  width:750rpx;
  height:316rpx;
}
.join_tabbox{
  width:690rpx;
  margin:0 auto;
  position:relative;
  top:-40rpx;
  overflow: hidden;
}
/* tab */
.swiper_tab{
    width: 690rpx;
    text-align: center;
    height: 112rpx;
    line-height: 112rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    margin:0 auto;
    position:relative;
    z-index:10;
    background-size:690rpx 112rpx;
}
.swiper_tab_item{
    width: 345rpx; 
    color:#434343;
}
.active{
    color:#F65959;
    font-size: 16px;
    font-weight: bold;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.swiper_tab_cont{
    width:590rpx;
    min-height:166rpx;
    background: #fdf0f4;
    border-radius: 12rpx;
    color:#F20C59;   
    padding:50rpx;
    font:bold 26rpx/36rpx "PingFangSC-Regular";
    margin-top:-56rpx;
    box-shadow: 0 0 40rpx #D9004D;
}
/* 六大赋能 */
.join_fnbox{
    margin-top:-7rpx;
    text-align:center;
    overflow: hidden;
}
.join_fnbox .imgbg,.join_usbox .imgbg{
    width: 452rpx;
    height: 112rpx;
}
.join_fnbox .join_cont,.join_usbox .join_cont{
    width:590rpx;
    height:256rpx;
    background: #fdf0f4;
    border-radius: 12rpx;
    color:#F20C59;   
    padding:50rpx;
    margin:-70rpx auto 0;
    box-shadow: 0 0 40rpx #D9004D;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}   
.join_cont .item{
    width:156rpx;
    text-align: center;
    font:bold 26rpx/36rpx "PingFangSC-Regular";
    height:158rpx;
}
.join_cont .imgbg{
    width:72rpx;
    height:72rpx;
}
/* 加入我们 */
.join_usbox{
    text-align: center;
    margin-top:25rpx;
}
.join_usbox .join_cont{
    height:auto;
}
.section{
    position:relative;
}
.section .inputtext,.section .inputarea,.section .picker{
    width:580rpx;
    height:88rpx;
    background:#ffffff;
    border-radius: 8rpx;
    margin-bottom:30rpx;
    text-align: left;
    padding:0 25rpx;
    font:30rpx/88rpx "PingFangSC-Regular";
}
.section .inputarea{
    height: 96rpx;
    line-height:42rpx;
    padding-top:24rpx;
}
.section .error{
    position:absolute;
    top:30rpx;
    right:30rpx;
    color:#f00;
    font:24rpx/24rpx "PingFangSC-Regular";
}
.join_btnsubmit{
    width:666rpx;
    height:108rpx;
    margin:50rpx auto;
}
.join_btnsubmit .btnimg{
    width:666rpx;
    height:108rpx;
}
.selectedbox{
    position:relative;
}
.triangleicon{
    position: absolute;
    top:38rpx;
    right:30rpx;
    width:0;
    height:0;
    border-left:12rpx solid transparent;
    border-right:12rpx solid transparent;
    border-top:12rpx solid #ee0754;
}
.section .inputtext,.section .inputarea,.section .picker{
    color:#00050A;
}