page {
	height: 100%;
	background-color: #fff;
	color: #333;
	font-family: "PingFangSC-Regular";
}
button::after{
	border: none;
}
.guide-wrapper {
	padding: 80rpx 75rpx;

	font-size: 24rpx;
}

.guide-wrapper .avatar {
	display: block;
	width: 150rpx;
	height: 150rpx;
	
	border-radius: 50%;

	margin: 0 auto 20rpx;

}

.guide-wrapper .nickname  {
	text-align: center;
	font-size: 30rpx;
	line-height: 50rpx;
	font-family: "PingFangSC-Medium";
	margin-bottom: 8rpx;
}

.guide-wrapper .weixin-user {
	text-align: center;
	font-size: 28rpx;
	line-height: 40rpx;
	color: #666;
}
.guide-wrapper .weixin-user image {
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
	margin-right: 5rpx;
}

.guide-wrapper .desc {
	font-size: 30rpx;
	line-height: 48rpx;
	margin-top: 130rpx;
}

.guide-wrapper .confirm {
	width: 100%;
	height: 88rpx;
	margin-top: 40rpx;

	line-height: 88rpx;
	font-size: 32rpx;
	color: #fff;
	text-align: center;

	background: #f66a6b;
	border-radius: 55rpx;
}